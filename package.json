{
  "name": "reduck2",
  "version": "0.1.0",
  "description": "Use redux without writing boilerplate code.",
  "main": "lib/index.js",
  "module": "esm/index.js",
  "sideEffects": false,
  "files": [
    "lib/",
    "esm/"
  ],
  "types": "lib/index.d.ts",
  "typings": "lib/index.d.ts",
  "scripts": {
    "watch": "yarn clean && yarn build:cjs --watch && yarn build:es --watch",
    "build": "yarn clean && yarn build:cjs && yarn build:es",
    "build:cjs": "tsc --module commonjs --outDir lib",
    "build:es": "tsc --module ESNext --outDir esm",
    "clean": "rimraf lib esm",
    "prettier": "prettier --check \"./src/**\" || prettier --write \"./src/**\"",
    "version": "conventional-changelog -p angular -i CHANGELOG.md -s && git add CHANGELOG.md",
    "prepublishOnly": "yarn build && yarn version"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/miusuncle/reduck2.git"
  },
  "keywords": [
    "react",
    "hooks",
    "utils"
  ],
  "author": "miusuncle",
  "license": "MIT",
  "dependencies": {
    "@reduxjs/toolkit": "^1.5.1",
    "lodash.pick": "^4.4.0"
  },
  "devDependencies": {
    "@commitlint/cli": "8.0.0",
    "@commitlint/config-conventional": "8.0.0",
    "@types/lodash.pick": "^4.4.6",
    "conventional-changelog-cli": "2.0.21",
    "cz-conventional-changelog": "2.1.0",
    "husky": "2.3.0",
    "prettier": "^2.2.1",
    "pretty-quick": "^3.1.0",
    "react-redux": "^7.2.1",
    "redux": "^4.0.5",
    "rimraf": "2.6.3",
    "typescript": "^4.2.4"
  },
  "peerDependencies": {
    "react": ">=16.8.3",
    "react-redux": ">=7.2.1",
    "redux": ">=4.0.5"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "pretty-quick --staged"
    }
  }
}
